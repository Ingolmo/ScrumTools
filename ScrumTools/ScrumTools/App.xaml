<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScrumTools.App">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Color Schema -->
            <Color x:Key="PrimaryColor">#BA3034</Color>
            <Color x:Key="PrimaryDarkColor">#95161A</Color>
            <Color x:Key="AccentColor">#95161A</Color>
            <Color x:Key="LightBackgroundColor">#FD9093</Color>
            <Color x:Key="DarkBackgroundColor">#6B0003</Color>
            <Color x:Key="MediumGrayTextColor">#D1C5C5</Color>
            <Color x:Key="LightTextColor">#FEF5F5</Color>

            <!-- Styles -->
            <Style TargetType="NavigationPage" ApplyToDerivedTypes="True">
                <Setter Property="BarBackgroundColor" Value="{StaticResource PrimaryColor}" />
                <Setter Property="BarTextColor" Value="{StaticResource LightTextColor}" />
            </Style>

            <Style TargetType="Image">
                <Setter Property="IsOpaque" Value="False" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>