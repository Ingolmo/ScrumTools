<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScrumTools.Pages.ComingSoonPage"
             Title="Coming Soon...">
    <ContentPage.Content>
        <Grid Padding="5" RowSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center">
                <Image Grid.Row="0" Source="robot.png" HeightRequest="150" />
                <Label Text="This section is under construction." HorizontalTextAlignment="Center"/>
                <Label Text="It will be available very soon!!" HorizontalTextAlignment="Center"/>
            </StackLayout> 
            <Button Grid.Row="1" Text="Close" Command="{Binding CloseCommand}" Margin="0" BackgroundColor="{StaticResource AccentColor}" TextColor="{StaticResource LightTextColor}"/>
            
        </Grid>
    </ContentPage.Content>
</ContentPage>