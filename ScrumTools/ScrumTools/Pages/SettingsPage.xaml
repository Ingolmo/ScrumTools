<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScrumTools.Pages.SettingsPage"
             Title="Settings">
    <ContentPage.Content>
        <ScrollView>
            <Grid Padding="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0">
                    <Label Text="Welcome to Settings Page!" />
                </StackLayout>
                <Button 
                    Grid.Row="1"
                    Text="About"
                    Command="{Binding GoToAboutCommand}"/>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>