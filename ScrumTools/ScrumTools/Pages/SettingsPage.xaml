<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScrumTools.Pages.SettingsPage"
             Title="Settings">
    <ContentPage.Content>
        <TableView Intent="Settings">
            <TableView.Root>
                <TableSection Title="Card's display" >
                    <SwitchCell Text="Display cards as Grid"  On="{Binding GridOn}" />
                </TableSection>
            </TableView.Root>
        </TableView>
    </ContentPage.Content>
</ContentPage>