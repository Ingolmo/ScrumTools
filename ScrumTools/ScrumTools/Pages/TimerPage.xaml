<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScrumTools.Pages.TimerPage"
             Title="Clock Page">
    <ContentPage.Content>
        <StackLayout>
            <TimePicker Time="{Binding SetTime, Mode=TwoWay}"  HorizontalOptions="Center" ></TimePicker>
            <Button Text="Start" Command="{Binding StartCommand}"></Button>
            <Label Text="{Binding Time, StringFormat='{0:T}'}"
                Font="Large"
                HorizontalOptions="Center"
                VerticalOptions="Center">
            </Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>